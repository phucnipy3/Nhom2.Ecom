
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main" class="site-main">
    <div class="custom-title-wrapper " style="background: url(images/background.jpg);">
        <div class="container">
            <div class="page-title-wrapper">
                <h1 class="page-title">
                    contact us
                </h1>
            </div>
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">contact us</li>
            </ol>
        </div>
    </div>

    <div class="columns container">
        <div class="block-contact">
            <div class="map">
                <img alt="" src="images/media/map.jpg">
            </div>
            <div class="contact-text">
                <span class="title">contact us</span>
                <table>
                    <tr>
                        <td><i class="fa fa-map-marker"></i></td>
                        <td><span>ADELLA London Oxford Street 012 United Kingdom.   </span></td>
                    </tr>
                    <tr>
                        <td><i class="fa fa-envelope"></i></td>
                        <td>
                            <span>emailadella@gmail.com </span>
                            <br>
                            <span>emailadella@gmail.com </span>
                        </td>
                    </tr>
                    <tr>
                        <td><i class="fa fa-phone"></i></td>
                        <td><span>(+92) 3456 7890 </span> <br><span>(+92) 1234 5678</span></td>
                    </tr>

                </table>
            </div>

            <div class="contact-form">
                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="forName">Name <sup>*</sup></label>
                                <input type="text" class="form-control" id="forName" placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Email <sup>*</sup></label>
                                <input type="text" class="form-control" id="forEmail" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="forWebsite">Website </label>
                                <input type="text" class="form-control" id="forWebsite" placeholder="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="forContent">Content <sup>*</sup></label>
                                <textarea class="form-control" id="forContent" rows="3" placeholder=""></textarea>
                            </div>
                        </div>

                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-inline">send massegas</button>
                    </div>

                </form>
            </div>
        </div>


    </div>
</div><!-- site-main -->
